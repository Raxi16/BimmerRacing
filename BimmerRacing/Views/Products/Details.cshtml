@model BimmerRacing.Models.Product

@{
    ViewData["Title"] = "Details";
}
<div class="container mt-5 p-4" style="background-color: rgba(255, 255, 255, 0.5); border-radius: 8px; color: black;">
    <div class="row">
        <div class="col-md-12 text-center">
<h1>Details</h1>

<div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ProductImage
            </dt>
            <dd class="col-sm-10">
                <img src="@("~/images/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" />
            </dd>
    <h4>Product</h4>
