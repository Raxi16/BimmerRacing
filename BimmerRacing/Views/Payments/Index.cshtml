@model IEnumerable<BimmerRacing.Models.Payment>

<div style="margin-top: 80px;">
    @{
        ViewData["Title"] = "Payment";
    }
    <div class="container mt-5 p-4" style="background-color: rgba(255, 255, 255, 0.5); border-radius: 8px; color: black;">
        <div class="row">
            <div class="col-md-12 text-center">
    <h1>Your payment</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PayAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PayMethod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PayDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer.FirstName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayMethod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.FirstName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PaymentId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PaymentId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PaymentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
            </div>
        </div>
    </div>
