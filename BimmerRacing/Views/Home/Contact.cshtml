@{
    ViewData["Title"] = "Contact Us";
}

<body/>
<div class="container mt-5 text-light">
    <h1>Contact Us</h1>
    <p class="lead">Have a question or feedback? Reach out to us!</p>

   <div class="row mt-5">
        <div class="col-md-6">
            <h3>Contact Details</h3>
            <p>
                <i class="fas fa-phone-alt"></i> <strong>Phone:</strong> +64 274319797<br>
                <i class="fas fa-envelope"></i> <strong>Email:</strong> bimmerracing@gmail.com
            </p>
            <p>
                <strong>Working Hours:</strong><br>
                Monday-Friday 9am-5pm<br>
                Saturday 11am-9pm
            </p>
            <p>
                <strong>Address:</strong><br>
                34A Portage Road, New Lynn 0600 Auckland
                    <br>
                    <a href="https://www.google.com/maps/search/?api=1&query=34A+Portage+Road,+New+Lynn,+0600,+Auckland" target="_blank" class="text-light">View on Google Maps</a>
                </p>
            </p>
            </div>
   </div>
        <div class="col-md-6">
            <h3>Contact Form</h3>
            <!-- Create your contact form here -->
            <form>
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullName" placeholder="Enter your full name">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="5" placeholder="Enter your message"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
