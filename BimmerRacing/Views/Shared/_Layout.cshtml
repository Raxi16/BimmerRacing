<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bimmer Racing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BimmerRacing.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
            <div class="container-fluid">
                <div class="d-flex justify-content-center align-items-center">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/br white logo.png" alt="Your Logo" style="height: 90px;" /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Categories
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Performance">Performance</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Maintenance">Maintenance</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Interior">Interior</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Exterior">Exterior</a></li>
                                </ul>
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                           </div>
                        </div>
                    </nav>
                </div>
            </div>
            <form class="d-flex">
                <input class="form-control me-2 text-light" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
                                <ul class="navbar-nav flex-grow-1 text-light">
                        <li class="nav-item text-light">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Cart">
                                <i class="fas fa-shopping-cart"></i> <span id="cartCount" class="badge bg-secondary">0</span>
                            </a>
                        </li>
                    </ul>
            <!-- User login and register icons -->
            <div class="d-flex align-items-center">
                <a class="nav-link text-light" href="/Identity/Account/Login">
                    <i class="fas fa-user"></i> <span class="ms-2">Login</span>
                </a>
                <a class="nav-link text-light" href="/Identity/Account/Register">
                    <i class="fas fa-user-plus"></i> <span class="ms-1">Register</span>
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - BimmerRacing - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
