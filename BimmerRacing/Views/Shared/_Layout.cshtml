<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bimmer Racing</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        body {
            padding-top: 70px; /* Match this value to the height of the fixed navbar */
            margin-bottom: 60px; /* Space for footer */
            background-image: url('../images/bmw m3.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        .navbar, .footer {
            background-color: rgba(0, 0, 0, 0.7); /* Darker transparent background */
            transition: background-color 0.5s ease;
        }

            .navbar.scrolled, .footer.scrolled {
                background-color: rgba(0, 0, 0, 0.9); /* Less transparent when scrolled */
            }

            .navbar .nav-link, .footer .text-light {
                color: #f8f9fa; /* Light text color by default */
            }

            .navbar.scrolled .nav-link, .footer.scrolled .text-light {
                color: #e9ecef; /* Slightly lighter text color when scrolled */
            }

        .footer {
            padding: 20px 0;
        }

            .footer .container {
                max-width: 1200px;
                margin: 0 auto;
            }

            .footer .social-icons a {
                color: #f8f9fa;
                margin: 0 10px;
                font-size: 1.5rem;
            }

                .footer .social-icons a:hover {
                    color: #007bff;
                }

            .footer .text-light a {
                color: #f8f9fa;
            }

                .footer .text-light a:hover {
                    color: #007bff;
                }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Bimmer Racing Logo.png" alt="Bimmer Racing" style="height: 60px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Categories</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Performance">Performance</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Maintenance">Maintenance</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Interior">Interior</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Exterior">Exterior</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                            </li>
                        }
                    </ul>

                    <!-- Search form -->
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>

                    <!-- Cart and Login/Register icons -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Carts" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> <span id="cartCount" class="badge bg-secondary">0</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Login">
                                <i class="fas fa-user"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Register">
                                <i class="fas fa-user-plus"></i> Register
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer text-light">
        <div class="container">
            <div class="row py-4">
                <!-- Mission Statement -->
                <div class="col-md-4 mb-3">
                    <h5>Our Mission</h5>
                    <p>
                        Our mission is to provide our customers with the highest quality of carbon fiber automotive parts,
                        accessories, and services, while delivering an unparalleled online shopping experience. We strive
                        to empower our customers to achieve the ultimate driving machine by providing superior quality,
                        competitive pricing, and exceptional customer service.
                    </p>
                </div>

                <!-- Contact Details -->
                <div class="col-md-4 mb-3">
                    <h5>Contact Details</h5>
                    <p><strong>Working Hours:</strong></p>
                    <ul class="list-unstyled">
                        <li>Monday-Friday: 9am - 5pm</li>
                        <li>Saturday: 11am - 9pm</li>
                    </ul>
                    <p>
                        <strong>Phone:</strong> +64 274319797 <br />
                        <strong>Email:</strong> <a href="mailto:bimmerracing@gmail.com">bimmerracing@gmail.com</a>
                    </p>
                    <p>
                        <strong>Address:</strong> <br />
                        34A Portage Road, New Lynn 0600 Auckland <br />
                        <a href="https://goo.gl/maps/xyz123" target="_blank" class="text-light">View on Google Maps</a>
                    </p>
                </div>

                <!-- Social Media and Legal Links -->
                <div class="col-md-4 mb-3">
                    <h5>Follow Us</h5>
                    <div class="social-icons">
                        <a href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook"></i></a>
                        <a href="https://www.instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
                        <a href="https://www.twitter.com" target="_blank"><i class="fab fa-twitter"></i></a>
                        <a href="https://www.linkedin.com" target="_blank"><i class="fab fa-linkedin"></i></a>
                        <a href="https://www.youtube.com" target="_blank"><i class="fab fa-youtube"></i></a>
                    </div>
                    <hr />
                    <p>&copy; 2024 - BimmerRacing</p>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(window).scroll(function () {
            if ($(this).scrollTop() > 50) {
                $('.navbar').addClass('scrolled');
                $('.footer').addClass('scrolled');
            } else {
                $('.navbar').removeClass('scrolled');
                $('.footer').removeClass('scrolled');
            }
        });
    </script>
</body>
</html>
